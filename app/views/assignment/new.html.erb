<%= form_for :assignment, url: assignment_index_path do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_field :content %>
<%= f.label :due_date %>
<%= f.date_field :due_date %>
<%= f.submit "Submit" %>
<%= f.hidden_field :classroom_id, value: params[:classroom_id] %>
<% end %>

