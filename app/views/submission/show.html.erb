<div class = 'gill w-70per mrg-auto min-w-350px max-w-900px'>

  <%= render partial: "class_and_assignment" %>

  <h4 class = "txt-ctr mrg-btm-0 mrg-top-45"><%= @submission.sub_title%></h4>
  <h5 class = "txt-ctr mrg-top-0 ft-lite">by <%=@student.first_name%> <%=@student.last_name%></h5>
  <p><%= @submission.sub_content%></p>
  <% p "*"*1000 %>
  <% p "SUBMISSION: " %>
  <% p @submission %>
  <% if @feedback == 1 %>
  <%= render partial: "feedback", locals: {submission: @submission} %>
  <% end %>

  <% if current_user != "student" %>
  <%= render partial: "create_feedback", locals: {submission: @submission} %>
  <% end %>

</div>

