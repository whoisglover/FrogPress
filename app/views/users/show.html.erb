<div class = 'gill w-70per mrg-auto min-w-350px max-w-900px'>

  <!-- Student's Name  -->
  <h1 class = "ft-lite ft-sz-2q mrg-btm-0 txt-ctr brd-bt pad-bt-5"><%= @student.first_name %> <%= @student.last_name %> Overview</h1>

  <!-- Highcharts stuff -->

  <select id = "highcharts-options"class = "w-60per brd-none gill ft-lite ft-sz-1half block mrg-l-40per mrg-top-15">
      <option value="readability">Flesch-Kincaid Readability Score</option>
      <option value="saab">other</option>
      <option value="mercedes">other</option>
      <option value="audi">other</option>
</select>


  <div class = "highchart piechart">
    <%= high_chart("submissions_chart", @submissions_chart) %>
  </div>


  <div id = "readability" class = "highchart linegraph">
    <%= high_chart("readability_chart", @readability_chart) %>
  </div>

  <!-- Tables of assignments per class -->
  <%= render partial: "overview_tables" %>

</div>
