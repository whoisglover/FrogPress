<!--
create new assignment
list of pending assignments
list of past due assignments
list of student in the classroom
delete a student from a classroom
-->

<div class = "gill w-400 mrg-auto">
  <nav class = "bkg-grn w-100per h-50">
    <% @roster = @classroom.student_roster %>
    <% @pending_assignments = @classroom.pending_assignments %>
    <% @past_due_assignments = @classroom.past_due_assignments %>
  </nav>

  <div class = 'gill w-70per mrg-auto min-w-350px max-w-900px'>
    <h2 class = "ft-lite ft-sz-2 txt-ctr mrg-btm-0" >Class: <%= @classroom.name %></h2>
    <a href="<%= new_assignment_path %>/?classroom_id=<%=@classroom.id%>">Create a new assignment</a>
    <h3>See Class Code - javascript here</h3>
    <p>Code:<%= @classroom.join_code %></p>
  </div>

  <div class = 'col-L vert-top'>
    <h2 class = "ft-lite ft-sz-2 txt-ctr mrg-btm-0" >Roster</h2>
    <table>
      <% @roster.each do |student| %>
      <tr>
        <td class = 'brd-rad-5 pad-5 ft-lite mrg-l-n40 no-blt ft-sz-1half mrg-top-10 bkg-gry'><a class = "no-txt-dec" href = "<%= user_path(student.id) %>"><%= student.first_name %></a>
        <td>
        <td>
          <%= form_tag(remove_student_path(classid: @classroom.id, userid: student.id), method: "delete") do %>
          <%= submit_tag("Remove") %>
            <% end %>
        </td>
      <tr>
      <% end %>
    </table>
  </div>

  <div class = 'col-R'>
    <h2 class = "ft-lite ft-sz-2 txt-ctr mrg-btm-0" >Active Assignments</h2>
    <table>
      <% @pending_assignments.each do |assignment| %>
      <tr>
        <td class = 'brd-rad-5 pad-5 ft-lite mrg-l-n40 no-blt ft-sz-1half mrg-top-10 bkg-gry'><a class = "no-txt-dec" href = "<%= assignment_path(assignment.id) %>"><%= assignment.title %></a>
        </td>
      <tr>
      <% end %>
    </table>

    <h2 class = "ft-lite ft-sz-2 txt-ctr mrg-btm-0" >Past Assignments</h2>
    <table>
      <% @past_due_assignments.each do |assignment| %>
      <tr>
        <td class = 'brd-rad-5 pad-5 ft-lite mrg-l-n40 no-blt ft-sz-1half mrg-top-10 bkg-gry'><a class = "no-txt-dec" href = "<%= assignment_path(assignment.id) %>"><%= assignment.title %></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>


        </div>
      </div>
