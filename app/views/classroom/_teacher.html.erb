<!--
create new assignment
list of pending assignments
list of past due assignments
list of student in the classroom
delete a student from a classroom
-->

<div class = 'gill w-70per mrg-auto min-w-350px max-w-900px'>
  <div class = "">
    <h2 class = "ft-lite ft-sz-2q txt-ctr mrg-btm-0  pad-bt-5" ><%= @classroom.name %></h2>

    <form action="<%= new_assignment_path %>/?classroom_id=<%=@classroom.id%>" method="get">
      <input type="text" name="classroom_id" class = "hidden" value= <%= @classroom.id %>>
      <input type = 'submit' class = 'brd-none w-100per dk-grn bkg-wt brd-grn' value = "Create a new assignment" >
    </form>



  </div>

  <div class = 'col-L vert-top'>
    <h2 class = "ft-lite ft-sz-2 mrg-btm-0  pad-bt-5 inln-bk orange" >Roster</h2>
    <p id = "edit-teacher-classroom" class = "no-txt-dec black hov-grn pad-l-20 flt-r mrg-top-37" >Edit</p>
    <table class = "brd-clpse w-100per brd-top">
      <% @roster.each do |student| %>
      <tr onclick="document.location = '<%= user_path(student.id) %>'"class = ' ft-lite mrg-l-n40 ft-sz-1q hov-bkg'>
        <td class = "pad-top-15 pad-l-5"><%= student.first_name %> <%= student.last_name %></a>
        </td>
        <td class = "pad-top-15 txt-rt pad-r-5 disp-no"><i class="fa fa-times ft-sz-1 pad-l-20"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class = 'col-R'>
    <h2 class = "ft-lite ft-sz-2 mrg-btm-0 pad-bt-5 inln-bk orange" >Pending Assignments</h2>
    <p id = "edit-teacher-classroom" class = "no-txt-dec black hov-grn pad-l-20 flt-r mrg-top-37">Edit</p>
    <table class = "brd-clpse w-100per brd-top">
      <% @pending_assignments.reverse.each do |assignment| %>

      <tr onclick="document.location = '<%= assignment_path(assignment.id) %>'" class = 'pad-5 ft-lite mrg-l-n40 ft-sz-1q hov-bkg'>
        <td class = "pad-top-15 pad-l-5 w-75per">
          <%= assignment.title %>
        </td>
        <td  class = "pad-top-15 pad-l-20 pad-r-5 txt-rt">due: </td>
        <td  class = "pad-top-15 pad-l-20 pad-r-5 txt-rt"><%= assignment.due_date.month %>/<%= assignment.due_date.day %></td>
        <td class = "pad-top-15 txt-rt disp-no pad-r-5"><i class="fa fa-times ft-sz-1 pad-l-20"></i></a>
        </td>
      </a>
    </tr>
    <% end%>
  </table>
<div class = "inln-bk w-100per">
  <h2 class = "ft-lite ft-sz-2 mrg-btm-0  inln-bk orange" >Past Assignments</h2>

  <p id = "edit-teacher-classroom" class = "no-txt-dec black hov-grn pad-l-20 flt-r mrg-top-37 mrg-btm-0" >Edit</p>
  <table class = "brd-clpse w-100per brd-top mrg-top-0">
    <% @past_due_assignments.each do |assignment| %>
    <tr onclick="document.location = '<%= assignment_path(assignment.id) %>'" class = 'pad-5 ft-lite mrg-l-n40 ft-sz-1q hov-bkg'>
      <td class = "pad-top-15 pad-l-5 w-75per">
        <%= assignment.title %></a>
      </td>
      <td  class = "pad-top-15 pad-l-20 pad-r-5 txt-rt">due: </td>
        <td  class = "pad-top-15 pad-l-20 pad-r-5 txt-rt"><%= assignment.due_date.month %>/<%= assignment.due_date.day %></td>
      <td class = "pad-top-15 txt-rt disp-no pad-r-5"><i class="fa fa-times ft-sz-1 pad-l-20"></i></a>
        </td>
    </tr>
    <% end %>
  </table>
</div>
</div>
<p class = "brd-top txt-rt mrg-top-150">Classroom Invitation Code: <%= @classroom.join_code %></p>

</div>

