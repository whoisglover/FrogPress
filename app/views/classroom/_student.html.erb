<div class = "gill w-400 mrg-auto">
  <nav class = "bkg-grn w-100per h-50">
    <% @roster = @classroom.student_roster %>
    <% @pending_assignments = @classroom.pending_assignments %>
    <% @past_due_assignments = @classroom.past_due_assignments %>

    <ul class = "inln-bk mrg-top-0 vert-top mrg-l-0">
      <li class = "sacramento no-blt ln-h-50 white ft-sz-2 mrg-l-0">Amelia</li>
    </ul>
  </nav>
  <div class = 'gill w-70per mrg-auto min-w-350px max-w-900px'>
    <h2 class = "ft-lite ft-sz-2 txt-ctr mrg-btm-0" >Class: <%= @classroom.name %></h2>


    <div class = 'col-R'>
      <h2 class = "ft-lite ft-sz-2 txt-ctr mrg-btm-0" >Active Assignments</h2>
      <ul>
        <% @pending_assignments.each do |assignment| %>
        <li class = 'brd-rad-5 pad-5 ft-lite mrg-l-n40 no-blt ft-sz-1half mrg-top-10 bkg-gry'><a class = "no-txt-dec" href = "<%= assignment_path(assignment.id) %>"><%= assignment.title %></a></li>
        <% end %>
      </ul>

      <h2 class = "ft-lite ft-sz-2 txt-ctr mrg-btm-0" >Past Assignments</h2>
      <ul>
        <% @past_due_assignments.each do |assignment| %>
        <li class = 'brd-rad-5 pad-5 ft-lite mrg-l-n40 no-blt ft-sz-1half mrg-top-10 bkg-gry'><a class = "no-txt-dec" href = "<%= assignment_path(assignment.id) %>"><%= assignment.title %></a></li>
        <% end %>
      </ul>


    </div>


  </div>
</div>
